<package format="2">
    <name>verilook_ros</name>
    <version>1.0.0</version>
    <description>Implementation of the Verilook tool chain in ROS</description>
    <maintainer email="minh.nguyen@smail.inf.h-brs.de">Minh Nguyen</maintainer>
    <author>Minh Nguyen</author>
    <license>LGPL</license>

    <buildtool_depend>catkin</buildtool_depend>
    <depend>cmake_modules</depend>

    <depend>cv_bridge</depend>
    <depend>roslint</depend>
    <depend>nodelet</depend>
    <depend>roscpp</depend>
    <depend>std_msgs</depend>
    <depend>sensor_msgs</depend>
    <depend>message_generation</depend>
    <depend>message_runtime</depend>
    <depend>image_transport</depend>

    <export>
        <nodelet plugin="${prefix}/nodelet_face_recognition_verilook.xml"/>
    </export>
</package>
